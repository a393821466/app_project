.login .logo {
  text-laign: center;
  margin-bottom: 30rpx;
}
.login .logo .logo_img {
    width: 180rpx;
    height: 180rpx;
    margin: 70rpx auto 30rpx;
    display: block;
    border-radius: 100%;
    background: #999;
}
.login .logo .logo_txt {
    display: block;
    text-align: center;
    font-size: 40rpx;
    font-weight: 600;
    color: #666;
}
.login .login_form {
  width: 600rpx;
  margin: 120rpx auto 0;
}
.login .login_form .login_form_node {
    position: relative;
    height: 80rpx;
    margin-bottom: 30rpx;
    padding: 15rpx 70rpx 0;
}
.login .login_form .login_form_node.login_form_userPhone, .login .login_form .login_form_node.login_form_userPassword {
      border-bottom: 1rpx solid  #ccc;
}
.login .login_form .login_form_node .loginsIcon {
      position: absolute;
      left: 15rpx;
      top: 20rpx;
}
.login .login_form .login_form_node .loginInput {
      width: 100%;
      height: 60rpx;
      font-size: 28rpx;
      border: none;
      outline: none;
}
.login .login_form .login_form_node .login_hide_pwd {
      position: absolute;
      right: 15rpx;
      top: 25rpx;
}
.login .login_form .login_form_forgetPassword {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
        -ms-flex-direction: row;
            flex-direction: row;
}
.login .login_form .login_form_forgetPassword .boxCheckBoxView {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
}
.login .login_form .login_form_forgetPassword .boxCheckBoxView .checkBoxStyle, .login .login_form .login_form_forgetPassword .boxCheckBoxView .checkBoxText {
        display: inline-block;
        font-size: 30rpx;
        color: #666;
}
.login .login_form .login_form_forgetPassword .forget_password {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      text-align: right;
      font-size: 30rpx;
      color: #666;
}
.login .login_form .login_submit_int {
    border-radius: 100rpx;
    margin-top: 50rpx;
}

