		{
			"root": "pages/userAuth",
			"pages": [{
					"path" : "/login",
					"style" : {
						"navigationBarBackgroundColor" : "#2580EF",
						"navigationBarTitleText" : "登陆",
						"titleNView" : {
							"buttons" : [
								{
									"text" : "立即注册",
									"fontSize" : "14",
									"float" : "right",
									"color" : "#fff",
									"width" : "80px"
								}
							]
						}
					}
				},
				{
					"path" : "/register",
					"style" : {
						"navigationBarBackgroundColor" : "#2580EF",
						"navigationBarTitleText" : "注册"
					}
				}
			]
		}
	],
	"condition": {
		//模式配置，仅开发期间生效
		"current": 0, //当前激活的模式（list 的索引项）
